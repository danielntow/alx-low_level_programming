CC = gcc
SRC = main.c school.c  # List of .c files
OBJ = $(SRC:.c=.o)      # .o files derived from .c files
NAME = school           # Name of the executable

all: $(NAME)  # Default target 'all' depends on the executable 'school'

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $< -o $@ -Wall -Werror
